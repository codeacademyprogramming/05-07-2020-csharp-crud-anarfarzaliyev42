@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WebAppCRUD.Models.Product
<h2>EditProduct</h2>
<form action="/Home/EditProduct" method="post">


    <input type="hidden" id="id-input" name="id" required="required" class="form-control" value="@Model.Id">

    <div class="form-group">
        <label>Name</label>
        <input id="name-input" name="name" required="required" class="form-control" value="@Model.Name">
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea name="description" rows="10" class="form-control"  >@Model.Description</textarea>
    </div>
    <div class="form-group">
        <label for="add-price">
            Price, <i class="fas fa-euro-sign"></i>
        </label>
        <input type="number" id="price-input" name="price" class="form-control" required="required" value="@Model.Price">
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="~/Home/Index" class="btn btn-simple">Cancel</a>
</form>
