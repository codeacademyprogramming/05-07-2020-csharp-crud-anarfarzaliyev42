
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Add New Product</h3>
<form action="/Home/AddProduct" method="post">

    <div class="form-group">
        <label>Name</label>
        <input id="name-input" name="name" required="required" class="form-control">
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea id="description" name="description" rows="10" class="form-control">
        </textarea>
    </div>
    <div class="form-group">
        <label for="add-price">
            Price, <i class="fas fa-euro-sign"></i>
        </label>
        <input type="number" id="price-input" name="price" class="form-control" required="required">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a href="~/Home/Index" class="btn btn-simple">Cancel</a>
</form>

